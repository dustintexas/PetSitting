@model IEnumerable<PetSitting.Model.SittersEntity>

@{
    ViewBag.Title = "All Sitters";
}

<div class="panel">
    <div class="panel-heading"><h3>@ViewBag.Title</h3></div>
<div class="panel-body">
<p>
    @Html.ActionLink("Create New", "Create" , "Users")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HiringDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrossSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NetSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HiringDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GrossSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NetSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedDate)
        </td>
        <td>
            @{ if((string)Session["AUTHRole"] == "Admin")
                {
                    @Html.ActionLink("Choose", "Choose", new { id=item.SitterID, fee=item.Fee }) <text>|</text>
                }

            }
            @Html.ActionLink("Edit", "Edit", new { id=item.SitterID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SitterID}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SitterID })
        </td>
    </tr>
}

</table>
</div>
</div>