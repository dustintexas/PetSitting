@model PagedList.IPagedList<PetSitting.Model.OwnersEntity>
@using PagedList.Mvc;

@{
    ViewBag.Title = "ListAll";
}

<div class="panel">
    <div class="panel-heading"><h3>Owners</h3></div>
    <div class="panel-body">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.ActionLink("Owner Name", "ListAll", new { Sorting_Order = ViewBag.SortingOwnerName })
                </th>
                <th>
                    @Html.ActionLink("Pet Name", "ListAll", new { Sorting_Order = ViewBag.SortingPetName })
                </th>
                <th>
                    @Html.ActionLink("Pet Age", "ListAll", new { Sorting_Order = ViewBag.SortingPetAge })
                </th>
                <th>
                    @Html.ActionLink("Pet Years", "ListAll", new { Sorting_Order = ViewBag.SortingPetYears })
                </th>
                <th>
                    @Html.ActionLink("Contact Phone", "ListAll", new { Sorting_Order = ViewBag.SortingContactPhone })
                </th>
                <th>
                    @Html.ActionLink("Sessions Count", "ListAll", new { Sorting_Order = ViewBag.SortingSessionsCount })
                </th>
                <th>
                    @Html.ActionLink("Total Sales", "ListAll", new { Sorting_Order = ViewBag.SortingTotalSales })
                </th>
                <th>
                    @Html.ActionLink("Modified Date", "ListAll", new { Sorting_Order = ViewBag.SortingModifiedDate })
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OwnerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PetName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PetAge)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PetYears)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SessionsCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalSales)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                    </td>
                    <td>
                        @{ if ((string)Session["AUTHRole"] == "Admin")
                            {
                                @Html.ActionLink("Choose", "Choose", new { @id = item.OwnerID }) <text> | </text>
                            }
                        }
                        @Html.ActionLink("Edit", "Edit", new { id = item.OwnerID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.OwnerID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.OwnerID })
                    </td>
                </tr>
            }

        </table>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("ListAll", new { page, Sorting_Order = ViewBag.CurrentSort }))

    </div>
</div>